#!/bin/bash

status=$?
set_date=$(date)
set_time=$(date +%H:%M:%S)

echo "Logged at $set_date" > log.txt

for i in $(find $1)
do
	if $2 "$i" > /dev/null; then
		echo "[$set_time][âœ”] $2 $i" >> log.txt	
	else	
		echo "[$set_time][X] $2 $i" >> log.txt
	fi
		
done

echo "Runned '$2' command with exit status: $status"
